<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnNewGame"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#5DC1B9"
        android:text="New Game"
        app:layout_constraintBottom_toTopOf="@+id/btnContGame"
        app:layout_constraintEnd_toEndOf="@+id/btnContGame"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnContGame"
        app:cornerRadius="20dp"/>

    <Button
        android:id="@+id/btnContGame"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#5DC1B9"
        android:text="Continue Game"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnQuickMatch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#5DC1B9"
        android:text="Quick Match"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btnContGame"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnContGame"
        app:layout_constraintTop_toBottomOf="@+id/btnContGame" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="144dp"
        android:layout_height="173dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="148dp"
        app:layout_constraintBottom_toTopOf="@+id/btnContGame"
        app:layout_constraintEnd_toEndOf="@+id/btnContGame"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>