<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchActivity">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/fondo_match" />

    <Button
        android:id="@+id/btnSho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#5DC1B9"
        android:text="SHO"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="@+id/btnPac"
        app:layout_constraintTop_toBottomOf="@+id/btnPac" />

    <Button
        android:id="@+id/btnPas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#5DC1B9"
        android:text="PAS"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="@+id/btnSho"
        app:layout_constraintTop_toBottomOf="@+id/btnSho" />

    <Button
        android:id="@+id/btnPhy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#5DC1B9"
        android:text="PHY"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btnDef"
        app:layout_constraintTop_toBottomOf="@+id/btnDef" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:backgroundTint="#5DC1B9"
        android:text="CONTINUE"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imgPlayer"
        app:layout_constraintStart_toStartOf="@+id/imgPlayer"
        app:layout_constraintTop_toBottomOf="@+id/imgPlayer" />

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F60226"
        android:text="RESTART"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btnContinue"
        app:layout_constraintStart_toStartOf="@+id/btnContinue"
        app:layout_constraintTop_toBottomOf="@+id/btnContinue" />

    <Button
        android:id="@+id/btnDef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#5DC1B9"
        android:text="DEF"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btnDri"
        app:layout_constraintTop_toBottomOf="@+id/btnDri" />

    <Button
        android:id="@+id/btnDri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="-14dp"
        android:backgroundTint="#5DC1B9"
        android:text="DRI"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imgPlayer"
        app:layout_constraintTop_toBottomOf="@+id/imgPlayer" />

    <Button
        android:id="@+id/btnPac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#5DC1B9"
        android:text="PAC"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="@+id/imgPlayer"
        app:layout_constraintTop_toBottomOf="@+id/imgPlayer" />

    <ImageView
        android:id="@+id/imgOpponent"
        android:layout_width="175dp"
        android:layout_height="215dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/txtVs"
        app:layout_constraintEnd_toEndOf="@+id/txtVs"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/txtVs"
        app:srcCompat="@drawable/pele" />

    <ImageView
        android:id="@+id/imgPlayer"
        android:layout_width="180dp"
        android:layout_height="210dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.479"
        app:srcCompat="@drawable/maradona" />

    <TextView
        android:id="@+id/txtVs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="VS"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imgPlayer"
        app:layout_constraintEnd_toEndOf="@+id/imgPlayer"
        app:layout_constraintStart_toStartOf="@+id/imgPlayer" />


</androidx.constraintlayout.widget.ConstraintLayout>